<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="eCommerce.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:eCommerce.MAUI"
    xmlns:views="clr-namespace:eCommerce.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="eCommerce.MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryView}"
        Route="Inventory" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="Shop" />
    <ShellContent
     Title="EditItem"
     ContentTemplate="{DataTemplate views:EditItemView}"
     Route="EditItem" />
    <ShellContent
     Title="Checkout"
     ContentTemplate="{DataTemplate views:CheckoutView}"
     Route="Checkout" />
    <ShellContent
     Title="Canfiguration"
     ContentTemplate="{DataTemplate views:ConfigurationView}"
     Route="Configuration" />
    <ShellContent
     Title="Cart"
     ContentTemplate="{DataTemplate views:CartView}"
     Route="Cart" />
        

</Shell>
